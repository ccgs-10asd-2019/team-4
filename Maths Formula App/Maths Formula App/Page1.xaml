        <Button x:Name="bc" Content="C" HorizontalAlignment="Left" Margin="504,334,0,0" VerticalAlignment="Top" Width="75" Click="bc_Click"/>
        <Button x:Name="bad" Content="+" HorizontalAlignment="Left" Margin="651,130,0,0" VerticalAlignment="Top" Width="75" Click="bad_Click" Background="#FF00FF6F" FontWeight="Bold"/>
        <Button x:Name="bsub" Content="-" HorizontalAlignment="Left" Margin="651,194,0,0" VerticalAlignment="Top" Width="75" Click="bsub_Click" Background="#FFFF9700" FontWeight="Bold"/>
        <Button x:Name="bmult" Content="×" HorizontalAlignment="Left" Margin="651,264,0,0" VerticalAlignment="Top" Width="75" Click="bmul_Click" Background="#FF00D1FF" FontWeight="Bold"/>
        <Button x:Name="bdiv" Content="÷" HorizontalAlignment="Left" Margin="651,334,0,0" VerticalAlignment="Top" Width="75" Click="bdiv_Click" Background="#FF6E00FF" FontWeight="Bold"/>
        <Button x:Name="nequal" Content="=" HorizontalAlignment="Left" Margin="341,392,0,0" VerticalAlignment="Top" Width="75" Click="nequal_Click"/>

    </Grid>
</Page>
