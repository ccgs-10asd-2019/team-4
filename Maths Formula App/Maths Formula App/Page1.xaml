        <Button x:Name="n1" Content="1" HorizontalAlignment="Left" Margin="173,130,0,0" VerticalAlignment="Top" Width="75" Click="n1_Click"/>
        <Button x:Name="n2" Content="2" HorizontalAlignment="Left" Margin="341,130,0,0" VerticalAlignment="Top" Width="75" Click="n2_Click"/>
        <Button x:Name="n3" Content="3" HorizontalAlignment="Left" Margin="504,130,0,0" VerticalAlignment="Top" Width="75" Click="n3_Click"/>
        <Button x:Name="n4" Content="4" HorizontalAlignment="Left" Margin="173,194,0,0" VerticalAlignment="Top" Width="75" Click="n4_Click"/>
        <Button x:Name="n5" Content="5" HorizontalAlignment="Left" Margin="341,194,0,0" VerticalAlignment="Top" Width="75" Click="n5_Click"/>
        <Button x:Name="n6" Content="6" HorizontalAlignment="Left" Margin="504,194,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.52,2.916" Click="n6_Click"/>
        <Button x:Name="n7" Content="7" HorizontalAlignment="Left" Margin="173,264,0,0" VerticalAlignment="Top" Width="75" Click="n7_Click"/>
